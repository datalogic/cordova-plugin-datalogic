<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.datalogic"
        version="0.7.0">

  <name>Datalogic Cordova SDK</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/hello.js" target="js/hello.js"/>

  <js-module src="www/hello.js" name="hello">
    <clobbers target="hello" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Hello">
        <param name="android-package" value="com.datalogic.decode.Hello"/>
      </feature>
    </config-file>

    <source-file src="src/com/datalogic/decode/Hello.java" target-dir="src/com/datalogic/decode/"/>
  </platform>

</plugin>